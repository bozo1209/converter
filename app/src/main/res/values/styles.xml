<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="editTextColor">@color/primary_text</item>
    </style>

    <style name="SettingsDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
        <item name="colorBackgroundFloating">@color/primary_dark</item>
    </style>

</resources>
